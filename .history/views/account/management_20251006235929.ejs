<%- include('../partials/head', { title: title }) %>

<main>
  <h1>Account Management</h1>

  <!-- Flash messages -->
  <%- messages() %>

  <!-- Personalized greeting -->
  <h2>Welcome <%= name %></h2>

  <!-- Update Account Information (visible for all) -->
  <p><a href="/account/update/<%= accountId %>">Update Account Information</a></p>

  <!-- Inventory Management (visible only for Employee or Admin) -->
  <% if (showInventoryLink) { %>
    <h3>Inventory Management</h3>
    <p><a href="/inv/">Go to Inventory Management</a></p>
  <% } %>
</main>

<%- include('../partials/footer') %>
